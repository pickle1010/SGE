@inherits LayoutComponentBase
@inject IServicioGestionDeSesion ServicioGestionDeSesion
@inject NavigationManager Navegador

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            @if(sesionIniciada)
            {
                <a href="miperfil">Mi Perfil</a>
            }
            else
            {
                <NavLink class="nav-link" href="login">
                    <button class="btn btn-primary">Iniciar Sesión</button>
                </NavLink>
                <NavLink class="nav-link" href="sign-in">
                    <button class="btn btn-primary">Registrarse</button>
                </NavLink>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool sesionIniciada = false;

    protected override void OnInitialized()
    {
        sesionIniciada = ServicioGestionDeSesion.ObtenerUsuario() != null;
    }
}
